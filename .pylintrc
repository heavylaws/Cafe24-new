[MAIN]
# Files or directories to be skipped. They should be base names, not paths.
ignore=CVS,venv,env,migrations,instance,logs,node_modules

# Use multiple processes to speed up Pylint.
jobs=1

# Pickle collected data for later comparisons.
persistent=yes

[MESSAGES CONTROL]
# Disable the message, report, category or checker with the given id(s).
disable=
    # Flask/SQLAlchemy specific disables
    too-few-public-methods,      # R0903 - Normal for data models and config classes
    import-outside-toplevel,     # C0415 - Required for Flask blueprints to avoid circular imports
    cyclic-import,              # R0401 - Common in Flask applications
    unused-argument,            # W0613 - Common in Flask error handlers
    
    # Type checking related (since we're not using mypy integration)
    import-error,               # E0401 - Virtual env imports
    no-member,                  # E1101 - SQLAlchemy dynamic attributes
    
    # Acceptable patterns
    broad-exception-caught,     # W0718 - Sometimes we need general exception handling
    
    # Style preferences
    line-too-long,              # C0301 - We'll handle this manually for readability
    trailing-whitespace,        # C0303 - We'll clean this up
    
    # Documentation (we have good docs now)
    missing-module-docstring,   # C0114 - Already added
    missing-class-docstring,    # C0115 - Already added
    missing-function-docstring  # C0116 - Already added

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=100

# String used as indentation unit.
indent-string='    '

[DESIGN]
# Maximum number of arguments for function / method
max-args=8

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of return statements in function / method body
max-returns=8

# Maximum number of branch for function / method body
max-branches=15

[SIMILARITIES]
# Minimum lines number of a similarity.
min-similarity-lines=6

[BASIC]
# Good variable names which should always be accepted, separated by a comma
good-names=i,j,k,ex,Run,_,id,db,bp,app

# Regular expression matching correct constant names
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

# Regular expression matching correct method names
method-rgx=[a-z_][a-z0-9_]{2,30}$

# Regular expression matching correct function names
function-rgx=[a-z_][a-z0-9_]{2,30}$

# Regular expression matching correct class names
class-rgx=[A-Z_][a-zA-Z0-9]+$ 